<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/preview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextureView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="500dp" />


    <Spinner
        android:id="@+id/camera_timer"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="430dp"
        android:background="@color/light_background_color"
        android:spinnerMode="dropdown"
        android:visibility="visible" />

    <androidx.appcompat.widget.AppCompatToggleButton
        android:id="@+id/btn_camera"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="430dp"
        android:checked="false"
        android:textOff="record"
        android:textOn="stop recording" />

    <ImageButton
        android:id="@+id/swap_camera"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="6dp"
        android:background="@color/fui_transparent"
        android:enabled="true"
        android:scaleType="fitXY"
        android:src="@drawable/swap_camera"
        android:visibility="visible" />

    <TextView
        android:id="@+id/timer_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:text="None"
        android:textSize="50sp"
        android:visibility="invisible"/>


</RelativeLayout>