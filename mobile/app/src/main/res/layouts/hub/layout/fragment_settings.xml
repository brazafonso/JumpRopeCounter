<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <ImageView
        android:id="@+id/profileimage"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/coach"/>

    <TextView
        android:id="@+id/settings_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_marginTop="175dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="@color/text"
        android:textSize="28sp"
        />

    <Button
        android:id="@+id/button_change_i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primary_button"
        android:layout_marginTop="250dp"
        android:paddingHorizontal="40dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Change Icon"
        android:layout_centerHorizontal="true"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/change_u"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primary_button"
        android:layout_marginTop="325dp"
        android:fontFamily="@font/open_sans_bold"
        android:hint="Change Username"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/change_u_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="320dp"
        android:layout_marginTop="329dp"
        android:backgroundTint="@color/primary_button"
        android:fontFamily="@font/open_sans_bold"
        android:paddingHorizontal="28dp"
        android:src="@drawable/check_icon" />

    <Button
        android:id="@+id/reset_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primary_button"
        android:layout_marginTop="400dp"
        android:paddingHorizontal="28dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Reset Stats"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>