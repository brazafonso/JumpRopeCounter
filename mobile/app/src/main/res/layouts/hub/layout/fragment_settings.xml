<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <ImageView
        android:id="@+id/profileimage"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/coach"/>

    <TextView
        android:id="@+id/settings_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_marginTop="175dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="@color/text"
        android:textSize="28sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:layout_marginTop="252dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="@color/text"
        android:textSize="28sp"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/change_u"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:padding="10dp"
        android:background="@color/primary_button"
        android:layout_marginTop="250dp"
        android:textColorHint="@color/text"
        android:fontFamily="@font/open_sans_bold"
        android:textSize="20sp"
        android:hint="Change Username"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/change_u_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="320dp"
        android:layout_marginTop="250dp"
        android:backgroundTint="@color/primary_button"
        android:fontFamily="@font/open_sans_bold"
        android:paddingHorizontal="28dp"
        android:src="@drawable/check_icon" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age: "
        android:layout_marginTop="325dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="@color/text"
        android:textSize="28sp"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/change_a"
        android:inputType="number"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:paddingVertical="10dp"
        android:paddingHorizontal="30dp"
        android:background="@color/primary_button"
        android:layout_marginTop="325dp"
        android:textColorHint="@color/text"
        android:fontFamily="@font/open_sans_bold"
        android:hint="Change Age"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/change_w_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="320dp"
        android:layout_marginTop="400dp"
        android:backgroundTint="@color/primary_button"
        android:fontFamily="@font/open_sans_bold"
        android:paddingHorizontal="28dp"
        android:src="@drawable/check_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight: "
        android:layout_marginTop="405dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="@color/text"
        android:textSize="26sp"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/change_w"
        android:inputType="numberDecimal"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:padding="10dp"
        android:background="@color/primary_button"
        android:layout_marginTop="400dp"
        android:textColorHint="@color/text"
        android:fontFamily="@font/open_sans_bold"
        android:hint="Change Weight"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/change_a_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="320dp"
        android:layout_marginTop="325dp"
        android:backgroundTint="@color/primary_button"
        android:fontFamily="@font/open_sans_bold"
        android:paddingHorizontal="28dp"
        android:src="@drawable/check_icon" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height: "
        android:layout_marginTop="475dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="@color/text"
        android:textSize="26sp"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/change_h"
        android:inputType="numberDecimal"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:padding="10dp"
        android:background="@color/primary_button"
        android:layout_marginTop="475dp"
        android:textColorHint="@color/text"
        android:fontFamily="@font/open_sans_bold"
        android:hint="Change Height"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/change_h_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="320dp"
        android:layout_marginTop="475dp"
        android:backgroundTint="@color/primary_button"
        android:fontFamily="@font/open_sans_bold"
        android:paddingHorizontal="28dp"
        android:src="@drawable/check_icon" />

    <Button
        android:id="@+id/reset_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primary_button"
        android:layout_marginTop="575dp"
        android:paddingHorizontal="28dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Reset Stats"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>