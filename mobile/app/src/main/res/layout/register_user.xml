<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.activity.RegisterUserActivity">


    <TextView
        android:id="@+id/register_text_view"
        android:layout_width="228dp"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="111dp"
        android:layout_marginTop="44dp"
        android:text="Register Account"
        android:textSize="25sp" />



    <TextView
        android:id="@+id/register_username_text_view"
        android:layout_width="228dp"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="155dp"
        android:layout_marginRight="3dp"
        android:text="Username:"
        android:textSize="20sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/register_input_username"
        android:layout_width="246dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="146dp"
        android:layout_marginTop="135dp"
        android:layout_marginRight="3dp"
        android:hint="username" />


    <TextView
        android:id="@+id/register_password_text_view"
        android:layout_width="228dp"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="215dp"
        android:layout_marginRight="3dp"
        android:text="Password:"
        android:textSize="20sp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/register_input_password"
        android:layout_width="246dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="146dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="3dp"
        android:inputType="textPassword"
        android:hint="pasword" />

    <Button
        android:id="@+id/register_submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="171dp"
        android:layout_marginBottom="328dp"
        android:text="Submit" />

</RelativeLayout>